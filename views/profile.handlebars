<div class="profile-container">
  <div class="card-header col-md-10">
    <h1>
      Profile
    </h1>
    <style>
      .form-input {
        width: 100%;
        padding: 10px;
        margin: 0;
        border: 1px solid #ccc;
        border-radius: 4px;
      }

      .btn {
        background-color: #007bff;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
      }

      .form-group {
        margin-bottom: 15px;
      }

      .signup-form {
        display: flex;
        flex-direction: column;
        align-items: center;
      }
    </style>
    <h2>Let's go, {{name}}!</h2>
  </div>
  <div>
    <h2>Goal</h2>
    <form class="goal-description-form">
      {{!-- <label for="workout_name">
        Input goal description:
      </label>
      <br>
      <textarea>
        {{goal}}
      </textarea> --}}
        <textarea class="form-input" placeholder="Enter your fitness goal" name="goal">
          {{goal}}
        </textarea>
        <button>
          Update goal
        </button>
    </form>

  </div>
  {{#each workouts as |workout|}}
  <div class="dish col-md-5">
    <p>
      Workout: {{workout.name}}
    </p>
    <p>
      Workout Time: {{workout.time}}
    </p>
    <p>
      Workout Distance: {{workout.distance}}
    </p>
  </div>
  {{/each}}
  <div class="add-workout-description-container">
    <h2>
      Input details of your workout
    </h2>
    <form class="new-workout-form">
      {{!-- <label for="workout_name">
        Workout name:
      </label>
      <br /> --}}
      <textarea class="form-input" id="workout_name" name="name" rows="2" cols="30" placeholder="Enter the name of your workout"></textarea>
      <input class="form-input" id="workout_time" name="time" type="number" placeholder="Enter the time in minutes:" />
      <input class="form-input" id="workout_distance" name="distance" type="number" placeholder="Enter the distance in miles:" />
      {{!-- <br />
      <label for="description">
        Description:
      </label>
      <br /> --}}
      {{!-- <textarea class="form-input" id="description" name="description" rows="5" cols="30" placeholder="Enter your workout description">{{description}}</textarea> --}}
      {{!-- <textarea id="description" name="description" rows="5" cols="30" placeholder="Enter your workout description">
        {{description}}
      </textarea>
      <br /> --}}
      <button class="btn btn-primary" type="submit" value="Submit">
        Add workout
      </button>
    </form>
  </div>
</div>

<script src="/profile.js"></script>