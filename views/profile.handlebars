<div class="profile-container">
  <div class="card-header col-md-10">
    <h1>
      Profile
    </h1>
    <h2>Let's go,{{name}}!</h2>
    </div>
    <div>
   <h2>Goal</h2>
<form class="goal-description-form">
<label for="workout_name">
        Input goal description:
      </label>
      <br>
      <textarea >
        {{goal}}
      </textarea>
</form>

  </div>
  {{#each workouts as |workout|}}
    <div class="dish col-md-5">
      <p>
        {{workout.id}}.
        {{workout.name}}
      </p>
    </div>
    <div class="col-md-7">
      <p>
        Goal description:
        {{workout.goal}}
      </p>
      <textarea></textarea>
    </div>
  {{/each}}
  <div class="add-workout-description-container">
    <h2>
      Input details of your workout
    </h2>
    <form class="new-workout-form">
      <label for="workout_name">
        Workout name:
      </label>
      <br />
      <textarea id="workout_name" name="workout_name" rows="2" cols="30">
        {{workout.name}}
      </textarea>
      <br />
      <label for="description">
        Description:
      </label>
      <br />
      <textarea id="description" name="description" rows="5" cols="30">
        {{description}}
      </textarea>
      <br />
      <button type="submit" value="Submit">
        Submit
      </button>
    </form>
  </div>
</div>