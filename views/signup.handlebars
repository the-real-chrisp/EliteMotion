<div class="container d-flex flex-column align-items-center justify-content-center vh-100">
  <h2>Sign up</h2>
  <style>
    .form-input {
      width: 100%;
      padding: 10px;
      margin: 0;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    .btn {
      background-color: #007bff;
      color: #fff;
      padding: 10px 20px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    .form-group {
      margin-bottom: 15px;
    }

    .signup-form {
      display: flex;
      flex-direction: column;
      align-items: center;
    }
  </style>
  <form class="form signup-form">
    <div class="form-group">
      <input class="form-input" type="text" id="name-signup" placeholder="Name" />
    </div>
    <div class="form-group">
      <input class="form-input" type="text" id="email-signup" placeholder="Email" />
    </div>
    <div class="form-group">
      <input class="form-input" type="password" id="password-signup" placeholder="Password" />
    </div>
    <div class="form-group">
      <input class="form-input" type="password" id="password-signup-2" placeholder="Re-enter password" />
    </div>
    <div class="form-group">
      <input class="form-input" type="goal" id="goal-signup" placeholder="Describe your goal" />
    </div>
    <p>Password must be minimum 8 characters using letters and/or numbers</p>
    <div class="form-group">
      <button class="btn btn-primary" type="submit">Sign Up</button>
    </div>
  </form>
</div>

<script src="/signup.js"></script>