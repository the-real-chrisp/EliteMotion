<div class="container d-flex flex-column align-items-center justify-content-center vh-100">
  <h2>Sign up</h2>
  <form class="form signup-form">
    <div class="form-group">
      <label for="name-signup">Name:</label>
      <input class="form-input" type="text" id="name-signup" />
    </div>
    <div class="form-group">
      <label for="email-signup">Email:</label>
      <input class="form-input" type="text" id="email-signup" />
    </div>
    <div class="form-group">
      <label for="password-signup">Password:</label>
      <input class="form-input" type="password" id="password-signup" />
    </div>
    <div class="form-group">
      <label for="password-signup-2">Re-enter password:</label>
      <input class="form-input" type="password2" id="password-signup-2" />
    </div>
    <div class="form-group">
      <label for="goal-signup">Briefly describe your goal:</label>
      <input class="form-input" type="goal" id="goal-signup" />
    </div>
    <p>Password must be minimum 8 characters using letters and/or numbers</p>
    <div class="form-group">
      <button class="btn btn-primary" type="submit">Sign Up</button>
    </div>
</div>
</form>

<script src="/signup.js"></script>